<div class="col-lg-9">
  <div class="card mt-5">
    <%= image_tag @product.image, class:"img-fluid", title:"#{@product.product_description}" %>
    <div class="card-body">
      <h3 class="card-title text-center"><%= @product.product_code %> - <%= @product.product_description %></h3>
      <h4 class="text-center mb-2">Dados Cadastrais</h4>
      <div class="row">
        <div class="col-md-6">
          <ul class="list-group">
            <li class="list-group-item"><strong>Ean: </strong> <%= @product.product_ean %></li>
            <li class="list-group-item"><strong>Ean Display: </strong><%= @product.display_ean.nil? ? "Não possui" : @product.display_ean %></li>
          </ul>
        </div>
        <div class="col-md-6">
          <ul class="list-group">
            <li class="list-group-item"><strong>Ean CX: </strong> <%= @product.product_dun %></li>
            <li class="list-group-item"><strong>Ncm: </strong><%= @product.tax_classification.tax_code %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- /.card -->
  <div class="card card-outline-secondary my-4">
    <div class="card-header">
      Produtos Simulares
    </div>
    <div class="card-body">
      <% if @product.generics.present? %>
        <% @product.generics.each do |generic| %>
          <%= generic.product_description %>
        <% end %>
      <% else %>
        <h4>Não Possui</h4>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to 'Voltar', root_path, class:"btn btn-secondary mt-2 mb-4 p-3 " %>
  </div>
</div>
