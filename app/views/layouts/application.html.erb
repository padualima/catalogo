<!DOCTYPE html>
<html>
  <head>
    <title>CatalogNestle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="mt-5">
    <%= render 'layouts/nav' %>
    <div class="container">
      <div class="row">
        <%= render 'layouts/menu' %>
        <%= yield %>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
