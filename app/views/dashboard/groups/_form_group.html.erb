<%= form_with model: [:dashboard, @group], local: true do |f| %>
  <div class="row mb-3 offset-md-2">
    <div class="form-group col-md-5">
      <%= f.label :group_code, 'Código do Grupo' %>
      <%= f.text_field :group_code, class: "form-control" %>
    </div>
    <div class="form-group col-md-5">
      <%= f.label :group_description, 'Descrição do Grupo' %>
      <%= f.text_field :group_description, class: "form-control" %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit class: 'btn btn-success', data: { disable_with: 'Criando....⌛'} %>
    <%= link_to 'Cancelar', dashboard_groups_path, class: "btn btn-danger ml-1" %>
  </div>
<% end %>
